.main{
  padding: 0 20rpx;
}
.user-info{
  width: 100%;
  height: 310rpx;
  overflow: hidden;
}
.user-info image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: block;
  margin: 20rpx auto;
}
.user-info text{
  color: #fff;
  text-align: center;
  display: block;
  font-weight: lighter;
}
text.user-id{
  color: #EBA3A6;
  font-size: 16px;
}
.wrapper{
  width: 100%;
  background: #fff;
  border-radius: 5px;
  margin-bottom: 20rpx;
}
.items-header{
  color: #D95459;
  padding: 20rpx 20rpx;
}
.items-wrapper{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  overflow: hidden;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  white-space: nowrap;
}
.item{
  display: inline-block;
  width: 150rpx;
  height: 180rpx;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
  color: #D95459;
  position: relative;
  background-color: #FFF8F9;
  flex-shrink: 0;
  flex-grow: 0;
}
.item i{
  display: inline-block;
  width: 100%;
  overflow: hidden;
  font-size: 40px;
  text-align: center;
  margin: 20rpx 0;
}
.item text{
  font-size: 12px;
  display: inline-block;
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  left: 0;
}
.new-tomato{
  box-sizing: border-box;
  background-color: #fff;
  padding: 20rpx 20rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: o;
  z-index: 99;
}
.new-tomato-btn{
  background-color: #D95459;
  color: #fff;
}


